#include<stdio.h>

int main()
{
    int i,j,n;
    scanf("%d",&n);
    if(n>0&&n<=100){
    for(i=1;i<=n;i++)
    {
       for(j=1;j<=n;j++)
       {
           if(j<=n&&j>=n+1-i)
           {
               printf("#");
           }
           else
           {
               printf(" ");
           }
       }
        printf("\n");
    }
    }
    
    return 0; 
}
