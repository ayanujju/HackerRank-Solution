#include <stdio.h>

int find_nth_term(int n, int a, int b, int c) {
    if((n>=1)&&(n<=20))
    {
        if(n==1)
            return a;
        if(n==2)
            return b;
        if(n==3)
            return c;
        else
            return (n-1)+(n-2)+(n-3);
    }
    
    return 0;
}

int main() {
    int n, a, b, c;
    scanf("%d %d %d %d", &n, &a, &b, &c);
    int ans = find_nth_term(n, a, b, c);
    printf("%d", ans); 
    
    return 0;
}
